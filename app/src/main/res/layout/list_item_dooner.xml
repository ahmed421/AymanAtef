<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/relativeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">



        <TextView
            android:id="@+id/tvNameDooner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:text="@string/name_dooner"
            android:textColor="#0c274d"
            android:textSize="16sp"

            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tvAgeDooner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameDooner"
            android:text="@string/age_dooner"
            android:textColor="#0c274d"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/tvBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAgeDooner"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/blood_group"
            android:textColor="#0c274d"
            android:textSize="14sp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/tvcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBloodGroup"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/city"
            android:textColor="#0c274d"
            android:textSize="14sp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/imvcall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tvcity"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="238dp"
            android:layout_marginLeft="238dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="-4dp"
            android:layout_toEndOf="@+id/tvcity"
            android:layout_toRightOf="@+id/tvcity"
            android:background="@color/colorPrimary"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />


    </RelativeLayout>


</android.support.v7.widget.CardView>